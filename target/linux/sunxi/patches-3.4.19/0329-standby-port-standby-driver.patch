+* Descript: power manager for allwinners chips platform.
+* Update  : date                auther      ver     notes
+*********************************************************************************************************
+*/
+
+#include <linux/module.h>
+#include <linux/suspend.h>
+#include <linux/cdev.h>
+#include <linux/fs.h>
+#include <linux/module.h>
+#include <linux/syscalls.h>
+#include <linux/slab.h>
